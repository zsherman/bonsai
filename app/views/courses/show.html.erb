<div class="course-page">
  <div id="wrapper">
      <div id="sidebar-wrapper">
          <ul class="sidebar-nav">
              <% @course.lessons.each do |l| %>
                <li>
                  <span class="course-name"><%= @course.title %></span>
                  <span class="lesson-name"><%= l.name %></span>
                  <p><%= l.description %></p>
                </li>
              <% end %>
          </ul>
      </div>
      <div id="page-content-wrapper">
          <div class="page-content">
              <div class="container">
                  <div class="row">
                      <div class="large-12 columns">
                          <p id="notice"><%= notice %></p>
                          <div class="large-12 columns video-container">
                          </div>
                          <div class="large-12 columns description-container">
                            <h3><%= @course.lessons.first.name %></h3>
                            <p><%= @course.lessons.first.content %></p>
                          </div>
                          <!-- Video Here -->
                          <!-- Content Here -->
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
