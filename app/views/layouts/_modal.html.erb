<button class="md-trigger" data-modal="modal-3">Fade in &amp; Scale</button>

<div class="md-modal md-effect-3" id="modal-3">
  <div class="md-content">
    <h3>Create an Account</h3>
    <h4>It takes less than a minute</h4>
    <div>
      <form>
        <div class="row">
          <div class="large-6 small-6 columns">
            <label><span>First Name</span>
              <input type="text" placeholder="Your first name"/>
            </label>
          </div>
          <div class="large-6 small-6 columns">
            <label><span>Last Name</span>
              <input type="text" placeholder="Your last name"/>
            </label>
          </div>
          <div class="large-12 small-12 columns">
            <label><span>Email Address</span>
              <input type="text" placeholder="Your email address"/>
            </label>
          </div>
          <div class="large-12 small-12 columns">
            <label><span>Invite Code</span>
              <input type="text" placeholder="3141592653"/>
            </label>
          </div>
          <div class="large-6 small-6 columns">
            <label><span>Password</span>
              <input type="password" placeholder="Password (min 8 characters)"/>
            </label>
          </div>
          <div class="large-6 small-6 columns">
            <label><span>Confirm Password</span>
              <input type="password" placeholder="Confirm Password"/>
            </label>
          </div>
        </div>
      </form>
      <i class="md-close"></i>
      <div class="button-wrapper clearfix">
        <button class="btn btn-7 btn-7a twitter">Connect Twitter</button>
        <%# button_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %>
        <button class="btn btn-7 btn-7a register">Create Account</button>
      </div>
      <p>Already have an account? <a href="#">Sign in</a></p>
    </div>
  </div>
</div>

<div class="md-overlay"></div><!-- the overlay element -->