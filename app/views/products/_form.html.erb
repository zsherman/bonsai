<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :image_url %>
    <%= f.input :video_url %>
    <%= f.input :price %>
    <%= f.input :instructor, value: @product.metadata[:instructor_name] %>
    <%= f.input :instructor_description, value: @product.metadata[:instructor_description] %>
    <%= f.input :shopify_variant_id %>
    <%= f.association :ingredients, collection: Ingredient.all, as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
