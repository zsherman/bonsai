<div class="product-page">
  <!-- Hero Section -->
  <div class="row product-hero">
    <div class="large-6 columns product-gallery">
      <div class="video"></div>
      <ul class="clearfix">
        <% @product.images.each do |img| %>
          <li><img src="<%= img.shopify_url %>"/></li>
        <% end %>
      </ul>
    </div>

    <div class="large-6 columns product-info cd-intro">
      <h1 id="cd-intro-tagline"><%= @product.title %></h1>
      <h3><%= number_to_currency(@product.price) %></h3>
      <p><%= @product.description %></p>
      <ul class="clearfix">
        <% @product.ingredients.each do |ing| %>
          <li><%= ing.name %></li>
        <% end %>
      </ul>
      <%= button_to 'Add to Cart', line_items_path(product_id: @product), class: "cd-btn" %>
    </div>
  </div>

  <!-- Secondary Nav -->
  <%= render 'layouts/secondary_nav' %>

  <!-- Ingredients -->
  <div class="row cd-section" id="ingredients">
    <div class="large-12 columns">
      <ul>
        <% @product.ingredients.each do |ing| %>
          <li><%= ing.name %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Video Preview -->
  <div class="row cd-section" id="preview-video">
    <div class="large-12 columns">
      <p>Video here</p>
    </div>
  </div>

  <!-- Instructor -->
  <div class="row cd-section" id="instructor">
    <div class="large-12 columns">
      <p>Instructor</p>
      <p><%= @product.metadata["instructor"] %></p>
      <p><%= @product.metadata["instructor_description"] %></p>
    </div>
  </div>

  <!-- Syllabus -->
  <div class="row cd-section" id="syllabus">
    <div class="large-12 columns">
      <p>What you'll learn</p>
    </div>
  </div>

  <!-- Photo Grid -->
  <div class="row cd-section" id="photo-grid">
    <div class="large-12 columns">
      <p>Photo Grid</p>
    </div>
  </div>

  <!-- Reviews -->
  <div class="row cd-section" id="reviews">
    <div class="large-12 columns">
      <p>Reviews here.</p>
    </div>
  </div>


</div>


  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>