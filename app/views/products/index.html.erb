<div class="catalogue">
  <div id="large-header">
    <div class="row">
      <h1>Choose your path.</h1>
      <h3>Each box comes with a professional video series.</h3>
    </div>
  </div>
  <div class="categories"></div>

  <h2>Products</h2>

    <ul>
      <% @products.each do |product| %>
      <li>
        <h4><%= link_to product.title, product_path(product) %></h4>
        <p><%= product.description %></p>
        <p><b>Price:</b> <%= number_to_currency product.price %></p>
      </li>
      <% end %>
    </ul>